<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neuromancer.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Music Player - Now Playing">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:label="Music Player - Artists" />
        <activity
            android:name=".AlbumsActivity"
            android:label="Music Player - Albums" />
        <activity
            android:name=".SongsActivity"
            android:label="Music Player - Songs" />
        <activity
            android:name=".SettingsActivity"
            android:label="Music Player - Settings"></activity>
    </application>

</manifest>